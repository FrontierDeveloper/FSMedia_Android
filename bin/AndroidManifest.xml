<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidfrontiersci"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="androidfrontiersci.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="androidfrontiersci.research.ResearchActivity"
            android:label="@string/title_activity_research" >
        </activity>
        <activity
            android:name="androidfrontiersci.videos.VideosListActivity"
            android:label="@string/title_activity_videos" >
        </activity>
        <activity
            android:name="androidfrontiersci.maps.MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>
        <activity
            android:name="androidfrontiersci.articles.ArticlesListActivity"
            android:label="@string/title_activity_articles" >
        </activity>
        <activity
            android:name="androidfrontiersci.askascientist.AskAScientistActivity"
            android:label="@string/title_activity_ask_a_scientist" >
        </activity>
        <activity
            android:name="androidfrontiersci.about.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>
