<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:layout_below="@+id/middle" >

    <LinearLayout
        android:id="@+id/person_image_caption"
        android:orientation="vertical"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:background="@drawable/image_border"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/person_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/image_desc" />

        <TextView
            android:id="@+id/person_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="3" />

    </LinearLayout>

    <androidfrontiersci.textviews.CustomTextView
        android:id="@+id/person_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toStartOf="@+id/person_image_caption"
        android:paddingEnd="10dp"
        android:textSize="25sp" />

</RelativeLayout><!-- From: file:/Users/jrbyam/Documents/FrontierScientists/Android/AndroidFrontierSci/res/layout/about_page_person.xml -->