<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_bg_repeat" >

    <ImageView
        android:id="@+id/fs_icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/fs_icon"
        android:paddingTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/arsc_icon"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:padding="20dp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/gi_icon"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:padding="20dp" />

    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/jrbyam/Documents/FrontierScientists/Android/AndroidFrontierSci/res/layout/splash_screen.xml -->